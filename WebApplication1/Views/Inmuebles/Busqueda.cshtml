@model WebApplication1.Models.BusquedaInmuebleView

@{
    ViewData["Title"] = "Busqueda";
    DateTime fechaInicio = DateTime.Today;
    DateTime fechaFin = fechaInicio.AddYears(2);
}

<h1>Busqueda</h1>

<h4>Busqueda de Inmuebles</h4>
<p>
    <a class="btn btn-info" asp-action="Index">Ver Disponibles</a>
</p>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Busqueda">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="FechaInicio" class="control-label">Fecha estimada de inicio</label>
                <input asp-for="FechaInicio" class="form-control" type="date" value="@fechaInicio.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="FechaInicio" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FechaFin" class="control-label">Fecha estimada de finalización</label>
                <input asp-for="FechaFin" class="form-control" type="date" value="@fechaFin.ToString("yyyy-MM-dd")" />
                <span asp-validation-for="FechaFin" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Importe" class="control-label">Importe máximo</label>
                <input asp-for="Importe" class="form-control" />
                <span asp-validation-for="Importe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Uso" class="control-label"></label>
                <select class="form-control" name="Uso">
                    <option value="Residencial">Residencial</option>
                    <option value="Privado">Privado</option>
                </select>
                <span asp-validation-for="Uso" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Buscar" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index" asp-controller="">Volver</a>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
