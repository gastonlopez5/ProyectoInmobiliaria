@model IEnumerable<WebApplication1.Models.Inmueble>

@{
    ViewData["Title"] = "Inmuebles Disponibles";
}

<h1>Listado de Inmuebles Disponibles</h1>

<p>
    <a class="btn btn-info" asp-action="Create">Agregar Nuevo</a>
    <a class="btn btn-info" asp-action="NoDisponibles">Ver NO Disponibles</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th>
                Tipo
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uso)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ambientes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Costo)
            </th>
            <th>
               Propietario
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TipoInmueble.Tipo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Uso)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ambientes)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Costo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Duenio.Apellido)
                    @Html.DisplayFor(modelItem => item.Duenio.Nombre)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" title="Editar"><span class="lnr lnr-pencil" style="font-weight:bold"></span></a>&nbsp; |
                    <a asp-action="GenerarContrato" asp-route-id="@item.Id" title="GenerarContrato"><span class="lnr lnr-file-add" style="font-weight:bold"></span></a>&nbsp; |
                    <a asp-action="ListarContratos" asp-route-id="@item.Id" title="ContratosRealizados"><span class="lnr lnr-list" style="font-weight:bold"></span></a>&nbsp; |

                    @if (User.IsInRole("Administrador"))
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" title="Eliminar"><span class="lnr lnr-cross" style="color:#fa0202; font-weight:bold"></span></a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
