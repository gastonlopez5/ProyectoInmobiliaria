@model WebApplication1.Models.Contrato
@{
    ViewData["Title"] = "Terminar Contrato";
}

<h2>Finalizar</h2>

<h3>¿Seguro que desea Finalizar el contrato?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaInicio)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaInicio)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.FechaFin)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.FechaFin)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>
    <h4>Datos del Garante</h4>
    <dl>
        <dt class="col-sm-2">
            DNI
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DniGarante)
        </dd>
        <dt class="col-sm-2">
            Nombre Completo
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NombreCompletoGarante)
        </dd>
        <dt class="col-sm-2">
            Telefono
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.TelefonoGarante)
        </dd>
        <dt class="col-sm-2">
            Email del Garante
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EmailGarante)
        </dd>
        <dt class="col-sm-2">
            Inquilino
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inquilino.Apellido)
            @Html.DisplayFor(model => model.Inquilino.Nombre)
        </dd>
        <dt class="col-sm-2">
            Dirección del Inmueble
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Inmueble.Direccion)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="submit" value="Finalizar Contrato" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index">Volver</a>
        <a class="btn btn-info" asp-action="Index" asp-controller="Pagos" asp-route-id="@Model.Id">Listar Pagos</a>
    </form>
</div>
