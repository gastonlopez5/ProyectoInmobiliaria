@model WebApplication1.Models.Galeria

@{
    ViewData["Title"] = "Eliminar Foto";
}

<h1>Eliminar Foto</h1>

<h3>¿Está seguro que desea eliminar la foto?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Foto
        </dt>
        <dd class="col-sm-10">
            <img src="@Html.DisplayFor(model => model.Ruta)" class="img-thumbnail" />
        </dd>
        <dt class="col-sm-2">
            Dirección del Inmueble
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Propiedad.Direccion)
        </dd>
        <dt class="col-sm-2">
            Propietario
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Propiedad.Duenio.Apellido)
            @Html.DisplayFor(model => model.Propiedad.Duenio.Nombre)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar" class="btn btn-danger" /> |
        <a class="btn btn-secondary" asp-action="Index" asp-route-id="@Model.InmuebleId">Cancelar</a>
    </form>
</div>
