@model WebApplication1.Models.Pago

@{
    ViewData["Title"] = "Eliminar PAgo";
}

<h1>Eliminar</h1>

<h3>¿Seguro que desea eliminar el pago?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nro. de Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NroPago)
        </dd>
        <dt class = "col-sm-2">
            Código del Contrato
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContratoId)
        </dd>
        <dt class = "col-sm-2">
            Fecha del Pago
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Fecha)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Importe)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Importe)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Eliminar Pago" class="btn btn-danger" />
        <a class="btn btn-secondary" asp-action="Index" asp-controller="Pagos" asp-route-id="@Model.ContratoId">Volver</a>
    </form>
</div>
